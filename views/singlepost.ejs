<html lang="en">
<head>
 <meta charset="UTF-8">
 <meta http-equiv="X-UA-Compatible" content="IE=edge">
 <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <link rel="stylesheet" href="/style.css">
 <title>Single Post</title>
</head>
<body>
 <h1>Single post page</h1>
 <%- include('./partials/navbar.ejs') %>
 <div class="singlepost">

<img src="<%= posts.userurl %>" alt="user">
 <h2>
 <%= posts.date %>
 </h2>

 <div class="content">
 <p>
 <%= posts.body %>
 </p>
 </div>

 <h3>
    <%= posts.likes %>
</h3>
<img src="<%= posts.posturl %>" alt="post">

 <a class="delete" data-del="<%= posts.id %>">Delete</a>

 </div>

 <script>
 const delreq = document.querySelector('a.delete');
 delreq.addEventListener('click', (e) => {
 const endpoint = `/posts/${delreq.dataset.del}`;
 fetch(endpoint, {
 method: 'DELETE',
 }).then(window.location.href = '/posts')
 });
 </script>

 <%- include('./partials/footer.ejs') %>

</body>
</html>